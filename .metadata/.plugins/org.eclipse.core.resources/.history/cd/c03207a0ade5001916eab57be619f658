			switch(option) {
			case 1:
				System.out.print("1. Green tea\n2. Black tea\n");
			    System.out.print("Choose type of tea (1 - 2 ): ");
			    int teaOption = myObj.nextInt();
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			}
		}while(option > 0 && option < 5);
	}
	
	TeaPot tea = new TeaPot();
	
}
